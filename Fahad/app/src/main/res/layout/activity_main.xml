<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:orientation="vertical"
    android:id="@+id/root"
    tools:context="com.example.engruzma.fahad.MainActivity"
    android:background="#f29999">



    <LinearLayout
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/child"
        android:orientation="vertical"
        android:background="#775858">
        <LinearLayout
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >

            <TextView

                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="talha"
                android:id="@+id/three"
                android:layout_weight="1"
                android:background="#b3b75e" />

            <TextView

                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="harami"
                android:id="@+id/four"
                android:background="#d64e4e" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >

            <TextView

                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text=""
                android:id="@+id/one"
                android:background="#e11010"
                android:layout_weight="1"
                />

            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="#71c17a"
                android:id="@+id/two"
                android:text=""
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text=""
                android:id="@+id/fivr"
                android:layout_weight="1"
                android:background="#b3b75e" />

            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/six"
                android:background="#8580cc" />
        </LinearLayout>
    </LinearLayout>



    <SeekBar
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/seek"
        android:layout_margin="-10dp"
        android:thumbTint="#6a4e4e"
        android:progress="0"
        android:max="100" />
</LinearLayout>
