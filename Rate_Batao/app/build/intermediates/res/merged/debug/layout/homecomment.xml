<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bgcolor"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:textStyle="bold"
        android:textColor="@color/defaul_text"
        android:text="Shaikh riaz"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/person_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/personalpost"
        android:layout_marginLeft="10dp"
        android:text="iphone 5 k rate batao"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/defaul_text"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

   <LinearLayout
       android:layout_marginTop="10dp"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/editpost_btn"
           android:textSize="10sp"
           android:textColor="@color/bgcolor"
           android:text="Edit"
           android:layout_marginLeft="10dp"
           android:background="@color/defaul_text"
           android:layout_width="60dp"
           android:layout_height="30dp"
           />
       <Button
           android:id="@+id/deletepost_btn"
           android:textSize="10sp"
           android:textColor="@color/bgcolor"
           android:text="Delete"
           android:layout_marginLeft="15dp"
           android:background="@color/defaul_text"
           android:layout_width="60dp"
           android:layout_height="30dp" />

   </LinearLayout>

    <LinearLayout
     android:layout_weight="5"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <ListView
        android:id="@+id/homecomments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
 </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/comment_id"
            android:textColorHint="@color/defaul_text"
            android:textSize="15sp"
            android:textColor="@color/defaul_text"
            android:hint="Write Comments"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/comment_btn"
            android:textSize="10sp"
            android:textColor="@color/bgcolor"
            android:text="Comment"
            android:layout_marginLeft="15dp"
            android:background="@color/defaul_text"
            android:layout_width="60dp"
            android:layout_height="30dp" />

    </LinearLayout>

</LinearLayout>