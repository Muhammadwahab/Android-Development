<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >




    <ImageView
            android:src="@drawable/androidparty"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" android:layout_alignParentTop="true"/>

    <TextView

            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:text="Happy Birth Day Sohail"
            android:textStyle="bold"

            android:textColor="#ffffff"
            android:textSize="38dp"

            android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp"
            android:id="@+id/textView"/>

    <TextView

            android:text="From Your Partner"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="38dp"

            android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
            />





</RelativeLayout>
