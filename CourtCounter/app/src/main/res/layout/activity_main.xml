<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="32dp"

>


    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

    >

        <LinearLayout

                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
        >

            <TextView
                    android:text="Team A"
                    android:textSize="15sp"
                    android:textColor="#616161"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/aCount"
                    android:text="9"
                    android:textSize="56sp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="55dp"
                    android:layout_marginBottom="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <Button
                    android:text="+3 point"
                    android:textAllCaps="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="120dp"
                    android:onClick="incrementThreeTeamA"
                    android:layout_height="wrap_content"

            />
            <Button
                    android:text="+2 point"
                    android:textAllCaps="true"
                    android:layout_width="120dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="incrementTwoTeamA"
                    android:layout_height="wrap_content"

            />
            <Button
                    android:text="Free throw"
                    android:textAllCaps="true"
                    android:layout_width="120dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="incrementOneTeamA"
                    android:layout_height="wrap_content"

            />

        </LinearLayout>
        <View

                android:layout_height="300dp"
                android:layout_width="1dp"
                android:background="@android:color/darker_gray"

        />
        <LinearLayout

                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
        >

            <TextView
                    android:text="Team B"
                    android:textSize="15sp"
                    android:textColor="#616161"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/bCount"
                    android:text="9"
                    android:textSize="56sp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="55dp"
                    android:layout_marginBottom="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <Button
                    android:text="+3 point"
                    android:textAllCaps="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="120dp"
                    android:onClick="incrementThreeTeamB"
                    android:layout_height="wrap_content"

            />
            <Button
                    android:text="+2 point"
                    android:textAllCaps="true"
                    android:layout_width="120dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="incrementTwoTeamB"
                    android:layout_height="wrap_content"

            />
            <Button
                    android:text="Free throw"
                    android:textAllCaps="true"
                    android:layout_width="120dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="incrementOneTeamB"
                    android:layout_height="wrap_content"

            />


        </LinearLayout>








    </LinearLayout>
    <Button
            android:text="Reset"
            android:textAllCaps="true"

            android:layout_width="120dp"
            android:onClick="Reset"
            android:layout_height="wrap_content"





            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
           />




    </RelativeLayout>
